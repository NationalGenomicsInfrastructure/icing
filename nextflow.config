/*
vim: syntax=groovy
-*- mode: groovy;-*-
 * -------------------------------------------------
 * Default config options for all environments.
 */

manifest {
    homePage = 'https://github.com/NationalGenomicsInfrastructure/icing'
    description = 'HLA typing from OxfordNanopore reads'
}

params {
    help = ''
    steps = 'genotype'
    threads = 8
    minReadLength = 2000
    minContigLength = 3000
    minCoverage = 70
    pileup = ''
    bam = ''
    sample = ''
    refDir = ''
}
